---
// src/pages/authors.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getAuthors, getPosts } from '../lib/cosmic';

const authors = await getAuthors();
const posts = await getPosts();

// Count posts per author
function getPostCount(authorId: string): number {
  return posts.filter(post => post.metadata?.author?.id === authorId).length;
}
---

<Layout title="Authors" description="Meet the expert authors who share their knowledge about the wonders of space.">
  <Header />
  
  <main class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
          Our Authors
        </h1>
        <p class="text-lg text-white/70 max-w-2xl mx-auto">
          Meet the passionate experts who bring you stories about the cosmos. Scientists, journalists, and space enthusiasts dedicated to sharing the wonders of space.
        </p>
      </div>
      
      <!-- Authors Grid -->
      {authors.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {authors.map((author) => {
            const postCount = getPostCount(author.id);
            
            return (
              <a
                href={`/authors/${author.slug}`}
                class="group relative bg-gradient-card rounded-2xl border border-white/10 hover:border-white/20 p-8 transition-all duration-300 hover:shadow-cosmic text-center"
              >
                <!-- Avatar -->
                {author.metadata?.avatar?.imgix_url ? (
                  <img
                    src={`${author.metadata.avatar.imgix_url}?w=256&h=256&fit=crop&auto=format,compress`}
                    alt={author.metadata?.name || author.title}
                    class="w-24 h-24 mx-auto rounded-full object-cover ring-4 ring-white/10 group-hover:ring-cosmic-400/50 transition-all mb-6"
                  />
                ) : (
                  <div class="w-24 h-24 mx-auto rounded-full bg-gradient-to-br from-cosmic-500 to-space-500 flex items-center justify-center ring-4 ring-white/10 group-hover:ring-cosmic-400/50 transition-all mb-6">
                    <span class="text-3xl font-bold text-white">
                      {(author.metadata?.name || author.title).charAt(0)}
                    </span>
                  </div>
                )}
                
                <!-- Name -->
                <h2 class="text-xl font-bold text-white group-hover:text-cosmic-300 transition-colors mb-2">
                  {author.metadata?.name || author.title}
                </h2>
                
                <!-- Bio -->
                {author.metadata?.bio && (
                  <p class="text-white/60 text-sm line-clamp-3 mb-4">
                    {author.metadata.bio}
                  </p>
                )}
                
                <!-- Post Count -->
                <div class="text-sm text-cosmic-400">
                  {postCount} {postCount === 1 ? 'article' : 'articles'}
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-cosmic-600/20 flex items-center justify-center">
            <svg class="w-10 h-10 text-cosmic-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white mb-4">No authors yet</h2>
          <p class="text-white/60">Authors will appear here once they are added.</p>
        </div>
      )}
    </div>
  </main>
  
  <Footer />
</Layout>