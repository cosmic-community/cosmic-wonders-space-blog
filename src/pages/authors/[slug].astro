---
// src/pages/authors/[slug].astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/PostCard.astro';
import { getAuthors, getAuthorBySlug, getPostsByAuthor } from '../../lib/cosmic';

export async function getStaticPaths() {
  const authors = await getAuthors();
  return authors.map((author) => ({
    params: { slug: author.slug },
  }));
}

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/404');
}

const author = await getAuthorBySlug(slug);

if (!author) {
  return Astro.redirect('/404');
}

const posts = await getPostsByAuthor(author.id);
---

<Layout 
  title={author.metadata?.name || author.title}
  description={author.metadata?.bio || `Articles by ${author.metadata?.name || author.title}`}
  image={author.metadata?.avatar?.imgix_url ? `${author.metadata.avatar.imgix_url}?w=400&h=400&fit=crop&auto=format,compress` : undefined}
>
  <Header />
  
  <main class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Author Profile -->
      <div class="text-center mb-16">
        <!-- Avatar -->
        {author.metadata?.avatar?.imgix_url ? (
          <img
            src={`${author.metadata.avatar.imgix_url}?w=320&h=320&fit=crop&auto=format,compress`}
            alt={author.metadata?.name || author.title}
            class="w-32 h-32 mx-auto rounded-full object-cover ring-4 ring-cosmic-400/30 mb-6"
          />
        ) : (
          <div class="w-32 h-32 mx-auto rounded-full bg-gradient-to-br from-cosmic-500 to-space-500 flex items-center justify-center ring-4 ring-cosmic-400/30 mb-6">
            <span class="text-4xl font-bold text-white">
              {(author.metadata?.name || author.title).charAt(0)}
            </span>
          </div>
        )}
        
        <!-- Name -->
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
          {author.metadata?.name || author.title}
        </h1>
        
        <!-- Bio -->
        {author.metadata?.bio && (
          <p class="text-lg text-white/70 max-w-2xl mx-auto mb-4">
            {author.metadata.bio}
          </p>
        )}
        
        <!-- Post Count -->
        <p class="text-cosmic-400">
          {posts.length} {posts.length === 1 ? 'article' : 'articles'} published
        </p>
      </div>
      
      <!-- Articles Section -->
      <div>
        <h2 class="text-2xl font-bold text-white mb-8 text-center">
          Articles by {author.metadata?.name || author.title}
        </h2>
        
        {posts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {posts.map((post) => (
              <PostCard post={post} />
            ))}
          </div>
        ) : (
          <div class="text-center py-20">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-cosmic-600/20 flex items-center justify-center">
              <svg class="w-10 h-10 text-cosmic-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">No articles yet</h3>
            <p class="text-white/60">
              This author hasn't published any articles yet.
            </p>
          </div>
        )}
      </div>
      
      <!-- Back Link -->
      <div class="mt-12 text-center">
        <a href="/authors" class="inline-flex items-center gap-2 text-cosmic-400 hover:text-cosmic-300 transition-colors">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          All authors
        </a>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>