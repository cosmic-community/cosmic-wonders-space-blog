---
// src/pages/categories.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCategories, getPosts } from '../lib/cosmic';

const categories = await getCategories();
const posts = await getPosts();

// Count posts per category
function getPostCount(categoryId: string): number {
  return posts.filter(post => 
    post.metadata?.categories?.some(cat => cat.id === categoryId)
  ).length;
}

const categoryIcons: Record<string, string> = {
  'planets': 'ü™ê',
  'stars-galaxies': '‚≠ê',
  'space-exploration': 'üöÄ',
};
---

<Layout title="Categories" description="Browse articles by category - Planets, Stars & Galaxies, Space Exploration, and more.">
  <Header />
  
  <main class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
          Categories
        </h1>
        <p class="text-lg text-white/70 max-w-2xl mx-auto">
          Explore our articles organized by topic. From planets in our solar system to distant galaxies and the missions that explore them.
        </p>
      </div>
      
      <!-- Categories Grid -->
      {categories.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {categories.map((category) => {
            const postCount = getPostCount(category.id);
            const icon = categoryIcons[category.slug] || 'üìö';
            
            return (
              <a
                href={`/categories/${category.slug}`}
                class="group relative bg-gradient-card rounded-2xl border border-white/10 hover:border-white/20 p-8 transition-all duration-300 hover:shadow-cosmic"
              >
                <div class="text-5xl mb-4">{icon}</div>
                <h2 class="text-2xl font-bold text-white group-hover:text-cosmic-300 transition-colors mb-2">
                  {category.metadata?.name || category.title}
                </h2>
                {category.metadata?.description && (
                  <p class="text-white/60 mb-4 line-clamp-2">
                    {category.metadata.description}
                  </p>
                )}
                <div class="flex items-center gap-2 text-sm text-cosmic-400">
                  <span>{postCount} {postCount === 1 ? 'article' : 'articles'}</span>
                  <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-20">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-cosmic-600/20 flex items-center justify-center">
            <svg class="w-10 h-10 text-cosmic-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white mb-4">No categories yet</h2>
          <p class="text-white/60">Categories will appear here once they are created.</p>
        </div>
      )}
    </div>
  </main>
  
  <Footer />
</Layout>