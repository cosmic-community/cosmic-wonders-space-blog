---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import CategoryBadge from '../components/CategoryBadge.astro';
import { getPosts, getCategories } from '../lib/cosmic';

const posts = await getPosts();
const categories = await getCategories();

// Sort posts by created_at descending
const sortedPosts = [...posts].sort((a, b) => {
  const dateA = new Date(a.created_at || '').getTime();
  const dateB = new Date(b.created_at || '').getTime();
  return dateB - dateA;
});

const featuredPost = sortedPosts[0];
const remainingPosts = sortedPosts.slice(1);
---

<Layout title="Home" description="Explore the wonders of space through captivating articles and stories from expert authors.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative py-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-tight mb-6">
          <span class="block text-white">Explore the</span>
          <span class="block bg-gradient-to-r from-cosmic-400 via-space-400 to-cosmic-400 bg-clip-text text-transparent">
            Wonders of Space
          </span>
        </h1>
        <p class="max-w-2xl mx-auto text-lg md:text-xl text-white/70 mb-10">
          Journey through the cosmos with captivating stories about planets, stars, galaxies, and the incredible missions that help us understand our universe.
        </p>
        
        <!-- Category Pills -->
        <div class="flex flex-wrap justify-center gap-3">
          {categories.map((category) => (
            <CategoryBadge category={category} size="lg" clickable />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Featured Post -->
    {featuredPost && (
      <section class="py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold text-white">Featured Article</h2>
          </div>
          <PostCard post={featuredPost} featured />
        </div>
      </section>
    )}
    
    <!-- Latest Posts -->
    {remainingPosts.length > 0 && (
      <section class="py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold text-white">Latest Articles</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {remainingPosts.map((post) => (
              <PostCard post={post} />
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- Empty State -->
    {posts.length === 0 && (
      <section class="py-20 px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-cosmic-600/20 flex items-center justify-center">
            <svg class="w-10 h-10 text-cosmic-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white mb-4">No articles yet</h2>
          <p class="text-white/60">
            Check back soon for amazing content about the wonders of space!
          </p>
        </div>
      </section>
    )}
  </main>
  
  <Footer />
</Layout>