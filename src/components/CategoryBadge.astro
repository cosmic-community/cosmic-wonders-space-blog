---
// src/components/CategoryBadge.astro
import type { Category } from '../types';

export interface Props {
  category: Category;
  size?: 'sm' | 'md' | 'lg';
  clickable?: boolean;
}

const { category, size = 'md', clickable = false } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
  lg: 'px-4 py-2 text-base',
};

const name = category.metadata?.name || category.title;
---

{clickable ? (
  <a
    href={`/categories/${category.slug}`}
    class:list={[
      'inline-flex items-center rounded-full font-medium bg-white/10 text-white/90 hover:bg-white/20 backdrop-blur-sm transition-all duration-200',
      sizeClasses[size]
    ]}
  >
    {name}
  </a>
) : (
  <span
    class:list={[
      'inline-flex items-center rounded-full font-medium bg-white/10 text-white/90 backdrop-blur-sm',
      sizeClasses[size]
    ]}
  >
    {name}
  </span>
)}